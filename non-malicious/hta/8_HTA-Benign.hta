<html>
  <head>
    <title>HTA Example 8</title>
    <HTA:APPLICATION
      APPLICATIONNAME="HTA Example 8"
      SCROLL="yes"
      SINGLEINSTANCE="yes"
      WINDOWSTATE="normal"
    />
  </head>
  <body>
    <h1>HTA Example 8</h1>
    <p id="timer">Countdown: <span id="countdown">10</span> seconds</p>

    <script>
      var seconds = 10;

      function updateCountdown() {
        document.getElementById("countdown").innerText = seconds;
        if (seconds === 0) {
          alert("Time's up!");
        } else {
          seconds--;
          setTimeout(updateCountdown, 1000);
        }
      }

      updateCountdown();
    </script>
  </body>
</html>
